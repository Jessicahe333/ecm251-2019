<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Servico_usuario">

    <TextView
        android:id="@+id/label_usuario"
        android:layout_width="237dp"
        android:layout_height="64dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="81dp"
        android:text=" Usuario"
        android:textSize="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toTopOf="@+id/servico"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/servico"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="32dp"
        android:text=" Selecione o serviço"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/alugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/alugar"
        android:layout_width="143dp"
        android:layout_height="59dp"
        android:layout_marginBottom="22dp"
        android:text="Alugar"
        app:layout_constraintBottom_toTopOf="@+id/devolucao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/devolucao"
        android:layout_width="143dp"
        android:layout_height="62dp"
        android:layout_marginBottom="357dp"
        android:text="Devolução"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>